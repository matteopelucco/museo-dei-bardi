<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Museo dei Bardi webapp</display-name>
    <description>
	Applicazione Museo dei Bardi
    </description>

    <servlet>
        <servlet-name>SensorServlet</servlet-name>
        <servlet-class>com.pelucco.museobardi.servlet.SensorServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>StatusServlet</servlet-name>
        <servlet-class>com.pelucco.museobardi.servlet.SensorStatusServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>SensorServlet</servlet-name>
        <url-pattern>/servlets/sensor</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>StatusServlet</servlet-name>
        <url-pattern>/servlets/status</url-pattern>
    </servlet-mapping>

	<welcome-file-list>
    	<welcome-file>index.html</welcome-file>
    	<welcome-file>index.htm</welcome-file>
    	<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

</web-app>
